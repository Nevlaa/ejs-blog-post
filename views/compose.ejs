<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="form mt-4" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control mb-4" type="text" name="postTitle" />
    <label>Post</label>
    <textarea
      class="form-control"
      name="postBody"
      rows="5"
      cols="30"
    ></textarea>
  </div>
  <button class="btn btn-primary mt-4" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
