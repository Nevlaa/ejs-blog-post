<%- include("partials/header"); -%>
    <h1>Update Post</h1>
    <form class="form mt-4" action="/update/<%=id%>" method="post">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control mb-4" type="text" name="postTitleUpdate" value="<%=title %>" />
            <label>Post</label>
            <textarea class="form-control" name="postBodyUpdate" rows="5" cols="30"><%= content %></textarea>
        </div>
        <a class="btn btn-outline-secondary mt-4" role="button" href="/posts/<%=id%>">Back</a>
        <button class="btn btn-outline-primary mt-4 ms-4" type="submit">Update</button>
    </form>

    <%- include("partials/footer"); -%>